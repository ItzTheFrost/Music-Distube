<const { SlashCommandBuilder} = require('@discordjs/builders')
const Discord = require('discord.js')

module.exports = {

    data: new SlashCommandBuilder()

    .setName('continue')
    .setDescription('Continue the song'),

  
    async run(client, interaction){//ðŸ’€

      if(!interaction.member.voice.channel) return interaction.reply({ content: `You need to be on a voice channel`, ephemeral: true })

    if(interaction.guild.me.voice.channel && interaction.member.voice.channel.id !== interaction.guild.me.voice.channel.id) return interaction.reply({ content: `You must be on the same voice channel as me`, ephemeral: true })


const queue = client.distube.getQueue(interaction.member.voice.channel)
if(!queue) return interaction.reply({content: "There are no songs in the list", ephemeral: true})


if(!queue.pause){
interaction.reply({content: "The song is not paused", ephemeral: true})
}


try{
  client.distube.resume(interaction.member.voice.channel)
  interaction.reply({content: "The song was continued", ephemeral: true})
  return;
} catch(e){
  interaction.reply({content: `Whoops, there was a little mistake ${e}`, ephemeral: true})>
}


        

    }
}
